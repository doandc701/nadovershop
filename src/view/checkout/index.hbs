<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-option">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="breadcrumb__text">
          <h4>Check Out</h4>
          <div class="breadcrumb__links">
            <a href="/">Home</a>
            <a href="/shop">Shop</a>
            <span>Check Out</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Checkout Section Begin -->
<section class="checkout spad">
  <div class="container">
    <div class="checkout__form">
      <form action="/checkout/order-cart" method="POST">
        <div class="row">
          <div class="col-lg-8 col-md-6">
            <h6 class="checkout__title">Thông tin thanh toán</h6>
            <div class="row">
              <div class="col-lg">
                <div class="checkout__input">
                  <p>Họ Và Tên<span>*</span></p>
                  <input type="text" placeholder="Họ Và Tên" name="name" />
                </div>
              </div>

            </div>

            <div class="checkout__input">
              <p>Địa chỉ<span>*</span></p>
              <input type="text" placeholder="Địa chỉ" class="checkout__input__add" name="address" />
            </div>

            <div class="row">
              <div class="col-lg-6">
                <div class="checkout__input">
                  <p>Số điện thoại<span>*</span></p>
                  <input type="text" placeholder="Số điện thoại" name="phone" />
                </div>
              </div>
              <div class="col-lg-6">
                <div class="checkout__input">
                  <p>Email(Không bắt buộc)<span>*</span></p>
                  {{#if user}}
                  <input type="text" value="{{user.email}}" name="email" />
                  {{else}}
                  <input type="text" placeholder="...@gmail.com" name="email" />
                  {{/if}}

                </div>
              </div>
            </div>
            <div class="checkout__input">
              <p>Ghi chú<span>*</span></p>
              <input type="text" placeholder="Note..." class="checkout__input__add" name="note" />
            </div>
            <div class="checkout__input">
              <p>Size<span>*</span></p>
              <select class="form-select" id="validationCustom10" required="" name="size">
                <option value="">Choose...</option>
                <option value="38">38</option>
                <option value="39">39</option>
                <option value="40">40</option>
                <option value="41">41</option>
                <option value="42">42</option>
              </select>
              <div class="invalid-feedback">
                Please select a valid size.
              </div>
            </div>

          </div>
          <div class="col-lg-4 col-md-6">
            <div class="checkout__order">
              <h4 class="order__title">Đơn hàng của bạn</h4>
              <div class="checkout__order__products">Sản phẩm
                <span>Giá</span>
              </div>
              {{#each products}}
              <ul class="checkout__total__products">
                <li>
                  <span>{{this.item.name}}
                    <input type="text" name="nameProduct" value="{{this.item.name}}" hidden>
                  </span>
                  <p> {{this.quantity}}
                    <input type="number" name="quantity" value="{{this.quantity}}" hidden>
                  </p>
                  <span>{{ formatAmount this.item.price }}đ
                    <input type="text" name="price" value="{{ formatAmount this.item.price }}" hidden>
                  </span> x
                </li>
                {{/each}}
                <ul class="checkout__total__all">
                  {{!-- <li>Subtotal <span>$750.99</span></li> --}}
                  <li>Tổng
                    <span>
                      {{formatAmount totalPrice}}đ
                      <input type="text" name="totalPrice" value="{{formatAmount totalPrice}}" hidden>
                    </span>
                  </li>
                </ul>
                <div class="payments">
                  <h5>Hình thức thanh toán:</h5>
                  <ul class="checkout__total__products">
                    <li class="wc_payment_method payment_method_cod">
                      <input id="payment_method_cod" type="radio" class="input-radio" name="payment" value="cod"
                        data-order_button_text="" />
                      <label for="payment_method_cod">Thanh toán khi nhận hàng (COD) </label>

                    </li>
                    <li class="wc_payment_method payment_method_cod">
                      <input id="payment_method_cod" type="radio" class="input-radio" name="payment" value="bank"
                        data-order_button_text="" />
                      <label for="payment_method_cod">Chuyển khoản ngân hàng </label>
                    </li>
                  </ul>
                </div>

                <button type="submit" class="site-btn">Đặt hàng</button>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</section>
<!-- Checkout Section End -->