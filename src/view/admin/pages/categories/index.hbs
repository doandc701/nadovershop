{{!-- tables --}}
<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name Categories</th>
            {{!-- <th scope="col">Time</th> --}}
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        {{#each categories}}
        <tr>
            {{!-- cách viết sum @index 1 <=> sum(index,1) --}}
                <th scope="row">{{ sum @index 1 }}</th>
                <td>{{this.name}}</td>
                {{!-- <td>{{this.createdAt}}</td> --}}
                <td>
                    <a type="button" href="/admin/tables/categories/{{this._id}}/edit" class="btn btn-warning">Sửa</a>
                </td>
                <td>
                    <a type="button" href="#" class="btn btn-danger" data-bs-toggle="modal"
                        data-bs-target="#delete-categories" data-id="{{this._id}}">Xóa</a>
                </td>
        </tr>
        {{/each}}


    </tbody>
</table>
</div>
</main>

{{!-- Dialog confirm delete --}}
<div class="modal fade" id="delete-categories" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Bạn có muốn xóa sản phẩm ?
            </div>
            <div class="modal-footer">
                <button id="btn-delete-product" type="button" class="btn btn-primary">OK</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
{{!-- Delete hiden form --}}
<form name="delete-categories-form" method="POST" />

{{!-- Dialog get ID product-delete --}}
<script>
    let categoriesID;
    // lấy ra form delete
    const deleteForm = document.forms['delete-categories-form']
    //console.log(deleteForm)
    const deleteProductModal = document.getElementById('delete-categories')
    deleteProductModal.addEventListener('show.bs.modal', function (event) {
        const button = event.relatedTarget
        categoriesID = button.getAttribute('data-id')

    })

    const btnDeleteProduct = document.getElementById('btn-delete-product')
    btnDeleteProduct.addEventListener('click', () => {
        console.log(12)
        //alert(productID)
        // set form action
        deleteForm.action = '/admin/tables/categories/' + categoriesID + '?_method=DELETE'
        deleteForm.submit()
    })
</script>